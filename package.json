{
  "name": "omsms-saas",
  "version": "1.0.0",
  "private": true,
  "description": "Order Management System for Vehicle Accessories - Multi-tenant SaaS Platform",
  "workspaces": [
    "packages/frontend",
    "packages/backend",
    "packages/shared",
    "packages/database"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@omsms/backend\" \"npm run dev --workspace=@omsms/frontend\"",
    "build": "npm run build --workspace=@omsms/shared && npm run build --workspace=@omsms/backend && npm run build --workspace=@omsms/frontend",
    "build:backend": "npm run build --workspace=@omsms/backend",
    "build:frontend": "npm run build --workspace=@omsms/frontend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "db:setup": "npm run setup --workspace=@omsms/database",
    "db:migrate": "npm run migrate --workspace=@omsms/database",
    "db:migrate:dev": "npm run migrate:dev --workspace=@omsms/database",
    "db:seed": "npm run seed --workspace=@omsms/database",
    "db:studio": "npm run studio --workspace=@omsms/database",
    "db:setup:tenant": "npm run setup:tenant --workspace=@omsms/database",
    "db:setup:complete": "npm run setup:complete --workspace=@omsms/database",
    "db:seed:tenant": "npm run seed:tenant --workspace=@omsms/database",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force node_modules, packages/*/node_modules, packages/*/dist, packages/frontend/.next -ErrorAction SilentlyContinue\"",
    "fresh-install": "npm run clean && npm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {}
}
